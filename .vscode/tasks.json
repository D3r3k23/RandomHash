{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build test executable: cl.exe",
			"command": "cl.exe",
			"args": [
				"/Zi",
				"/EHsc",
				"/nologo",
				"/Fe: ${workspaceFolder}\\test\\build\\Tests.exe",
				"/I ${workspaceFolder}\\src",
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\test\\TestMain.cpp"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: cl.exe"
		}
	]
}